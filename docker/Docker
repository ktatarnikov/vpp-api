FROM ubuntu:latest

# Essential
RUN apt-get update && \
    apt-get install -y \
        sudo \
        curl \
        vim \
        procps \
        build-essential \
        clang \
        git

# Rust
RUN curl https://sh.rustup.rs -sSf | sh -s -- -y --no-modify-path
RUN . "$HOME/.cargo/env"

# fd.io debian packages
RUN curl -s https://packagecloud.io/install/repositories/fdio/release/script.deb.sh | sudo bash

RUN mkdir -p /var/log/vpp/vpp.log

WORKDIR /home/ubuntu
COPY . .

CMD ["/bin/bash"]

